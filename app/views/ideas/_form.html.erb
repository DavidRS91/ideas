<%= form_for @idea do |f| %>

<% if @idea.errors.present? %>
<p><%= @idea.errors.full_messages.join(', ') %></p>
<% end %>

<div class="">
  <%= f.label :title %>
  <%= f.text_field :title, class: "form-control" %>
</div>

<div class="">
  <%= f.label :description %>
  <%= f.text_area :description, class: "form-control" %>
</div>

<%= f.submit %>

<% end %>
