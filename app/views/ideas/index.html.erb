<div class="welcome-message">
  <h3>Welcome to the Idea Factory!</h3>
</div>

  <% @ideas.each do |idea| %>
    <div class="container-fluid row">
      <div class="toggle">
        <%= image_tag 'plus.png', class: 'img-fluid', style: 'max-height: 30px; max-width: 30px;' %>
      </div>

      <div class="col-11">
        <%= link_to idea.title, idea_path(idea)%>
        <p><%= idea.description %></p>
      </div>
    </div>
  <% end %>
