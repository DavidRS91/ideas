<!DOCTYPE html>
<html>
  <head>
    <title>Ideas</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>

    <nav class="navbar navbar-expand navbar-dark" style='background-color: crimson; height: 60px;'>
      <a class="navbar-brand" href="<%= root_path %>"><%= image_tag 'factory.png', class: 'img-fluid', style: 'border-radius: 5px; max-height: 50px; max-width: 50px; filter: invert(100%);' %></a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse d-flex" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item active">
            <a class="nav-link" href="<%= root_path %>"><strong>Idea Factory </strong><span class="sr-only">(current)</span></a>
          </li>
          <li class="nav-item active">
            <a class="nav-link" href="<%= new_idea_path %>">New Idea</a>
          </li>
          <div class="d-flex justify-content-end">
          <% if user_signed_in? %>
          <li class="nav-item active">
            <a class="nav-link">Hello, <%= current_user.first_name %>!</a>
          </li>
          <li class="nav-item active">
            <a class="nav-link" href="<%= session_path %>" data-method="delete">Sign Out</a>
          </li>
          <% else %>
          <li class="nav-item active">
            <a class="nav-link" href="<%= new_session_path %>" >Sign In</a>
          </li>
          <li class="nav-item active">
            <a class="nav-link" href="<%= new_user_path %>" >Sign Up</a>
          </li>
          <% end %>
        </div>

        </ul>
      </div>
    </nav>

    <% if flash[:notice].present? || flash[:alert].present? %>
      <div class="flash-message">
        <%= flash[:notice] %>
        <%= flash[:alert] %>
      </div>
    <% end %>

    <br>
    <div class="container-fluid">
      <%= yield %>
    </div>
  </body>
</html>
